{
    "manifest_version": 3,
    "name": "Chalkpad Attendence Tracker",
    "description": "It will show number of class you can bunk or number of class you have to attend to maintain your attendence to 75%",
    "version": "1.0.0",
    "content_scripts": [
      {
        "matches": ["https://punjab.chitkara.edu.in//Interface/Student/listAttendance.php"],
        "js": ["scripts/app.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png"
    },
    "action": {
      "default_popup": "index.html"
    }
  }
  